{
  "compilerOptions": {
    "module": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es5", "es6", "es7", "es2015.collection", "dom"],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
